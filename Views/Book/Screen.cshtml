@model ICollection<FPTBook1.Models.Book>

<div class="container text-center">
    <h1 class="text text-danger">Book List</h1>
    <table class="table table-primary">
        <tr >
            <th>Book Id</th>
            <th>Book Name</th>
            <th>Book Image</th>
            
            <th class="text-center" >Action</th>
        </tr>

   <a class="font-weight-bold" asp-controller="Book" asp-action="AddBook" >     <h2 class="btn btn-outline-success">Add Book
</h2>    </a>
        @foreach (var book in Model)
        {
           <tr>
               <td>@book.Id</td>
               <td> <a class="font-weight-bold" asp-controller="Book" asp-action="BookDetail" asp-route-id="@book.Id"> @book.Name</a>  </td>
              
               <td><img src="@book.Image" width="300px" height="300px" /></td>
               <td>

               <td>
                   <a class="btn btn-danger" asp-action="Delete" asp-route-id="@book.Id"
                   onclick="return confirm('Are you sure you want to delete this  ?');">
                   Delete</a>
               </td>
               <td>
                   <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@book.Id"
                   >
                   Edit</a>
               </td>
           </tr>
        }
    </table>
</div>
