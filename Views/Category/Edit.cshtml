@model FPTLibrary.Models.Category;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container-fluid col-md-5 text-center mt-3">
    <h1 class="alert alert-warning">Edit Category</h1>
    <form action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span class="text-black-50 text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image"></label>
            <input class="form-control" asp-for="Image" />
            <span class="text-black-50 text-danger" asp-validation-for="Image"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Edit">
        </div>
    </form>
</div>
</body>
</html>