@model FPTLibrary.Models.AspNetUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Person Profile</title>
</head>
<body>
   <h1 class="text-success text-center">Person Profile</h1>
   <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <br />
                <img src="@Model.Image" width="180" height="200">
                <br />
                <input asp-for="Image" class="form-control" disabled />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Roles"></label>
                <input asp-for="Roles" class="form-control" disabled />
            </div>
        </div>
    </div>
</body>
</html>